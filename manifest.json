{
  "manifest_version": 3,
  "name": "ListingSaver",
  "version": "0.1.0",
  "description": "Save rental listings to a centralized dashboard",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.zillow.com/*",
      "*://*.hotpads.com/*",
      "*://*.trulia.com/*"
    ],
    "js": ["content.js"]
  }]
}
