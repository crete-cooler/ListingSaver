{
  "manifest_version": 3,
  "name": "ListingSaver",
  "version": "0.1.0",
  "description": "Save rental listings to a centralized dashboard",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://nominatim.openstreetmap.org/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.zillow.com/*",
      "*://*.hotpads.com/*",
      "*://*.trulia.com/*",
      "*://*.apartments.com/*",
      "*://*.realtor.com/*",
      "*://*.streeteasy.com/*",
      "*://*.rent.com/*",
      "*://*.zumper.com/*",
      "*://*.nooklyn.com/*",
      "*://nooklyn.com/*"
    ],
    "js": ["content.js"]
  }]
}
